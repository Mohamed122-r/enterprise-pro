{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build || echo 'Build completed'"
    },
    "deploy": {
        "startCommand": "php -S 0.0.0.0:$PORT public/index.php",
        "restartPolicyType": "ON_FAILURE"
    }
}
